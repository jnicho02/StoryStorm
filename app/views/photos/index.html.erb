<% content_for(:page_title) {t '.page_title'} %>
<% content_for(:title) {t '.page_heading'} %>
<% content_for(:admin_menu) {navbar_link_to(t('buttons.add'), new_photo_path, {:class => :edit, :title => t('buttons.add')})} %>

<div class="row">
  <%= t '.explanation_html' %>
</div>

<style media="screen" type="text/css">
  @media (min-width: 34em) {
      .card-columns {
          -webkit-column-count: 4;
          -moz-column-count: 4;
          column-count: 4;
      }
  }
  @media (min-width: 48em) {
      .card-columns {
          -webkit-column-count: 5;
          -moz-column-count: 5;
          column-count: 5;
      }
  }
  @media (min-width: 62em) {
      .card-columns {
          -webkit-column-count: 6;
          -moz-column-count: 6;
          column-count: 6;
      }
  }
  @media (min-width: 75em) {
      .card-columns {
          -webkit-column-count: 7;
          -moz-column-count: 7;
          column-count: 7;
      }
  }
</style>

<div class="container-fluid">
  <div class="row">
    <%= will_paginate @photos %>
  </div>
  <div class="card-columns">
    <%= render partial: 'photos/tile', :collection => @photos, as: :photo %>
  </div>
  <div class="row">
    <%= will_paginate @photos %>
  </div>
</div>
