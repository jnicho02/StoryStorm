<% if controller.controller_name.eql?('verbs') && controller.action_name.eql?('show')%>
<div typeof="foaf:Organization" class="card vcard">
<% else %>
<div typeof="foaf:Organization" class="card vcard" style="width: 15rem;">
<% end %>
  <div class="card-block">
    <h4 class="card-title">
      <% if controller.controller_name.eql?('verbs') && controller.action_name.eql?('show')%>
        <%= verb.name %>
      <% else %>
        <%= link_to verb.name, verb %>
      <% end %>
    </h4>
    <span class="label label-default label-pill pull-right">
      <%= verb.personal_connections_count %>
    </span>
  </div>
</div>