<div class="card vcard">
  <div class="card-block">
    <h4 class="card-title">
      <%= icon('user') if role.person?%>
      <%= icon('paw') if role.animal? %>
      <%= icon('users') if role.group? %>
      <%= icon('building') if role.place? %>
      <%= icon('map-marker') if role.thing? %>
      <% if controller.controller_name.eql?('roles') && controller.action_name.eql?('show') %>
        <%= role.name.pluralize %>
      <% else %>
        <%= link_to role.name, role %>
      <% end %>
    </h4>
  </div>
  <% if controller.controller_name.eql?('roles') && !controller.action_name.eql?('index') %>
    <div class="card-block">
      <% if role.used_as_a_suffix? %>
        <p class="card-text">
          <%= role.military_medal? ? 'A military medal that confers' : 'Confers' %>
          the letters <strong><%= role.letters %></strong> after the name.
        </p>
      <% end %>
      <% unless role.wikipedia_stub.blank? %>
        <p class="card-text">
          <%= icon('external-link') %><%= link_to('Wikipedia', role.wikipedia_url, target: "_blank") %>
        </p>
      <% end %>
    </div>
  <% end %>
  <div class="card-footer">
    <span class="label label-default label-pill pull-right">
      <%= role.personal_roles_count %>
    </span>
  </div>
</div>
