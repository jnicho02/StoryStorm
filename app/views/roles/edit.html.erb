<% content_for(:page_title) {t '.page_title', :role => @role.name } %>
<% content_for(:title) {t '.page_heading', :role => @role.name } %>

<div class="row">
  <%= render @role %>
</div>

<%= form_for(@role) do |f| %>
  <fieldset class="form-group row">
    <%= f.label :name, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :abbreviation, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :abbreviation, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :prefix, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :prefix, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :suffix, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :suffix, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :slug, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :slug, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :wikipedia_stub, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :wikipedia_stub, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :role_type, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.collection_select :role_type, Role.types, :to_s, :to_s, :include_blank => true, :class => 'form-control' %>
    </div>
  </fieldset>
  <%= f.submit t('buttons.save'), :class => 'btn btn-primary' %>
<% end %>