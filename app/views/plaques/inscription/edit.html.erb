<% content_for :page_title, t('.page_title') + @plaque.id.to_s %>
<% content_for :title do %>
  What does the <%= link_to @plaque.title, @plaque %> say?
<% end %>
<% content_for :page_subhead do %>
  <%= t '.page_subhead' %>
  <% if url_for(:only_path => false).include?('microtask') %>
    <%= button_to "Not sure. Give me another one", todo_path('microtask'), :method => :get, :class => :button %>
  <% end %>
<% end %>
<%= render 'plaques/edit_bar', :plaque => @plaque %>

<%= render @plaque.main_photo %>
<br/>
<%= form_for @plaque do |f| %>
  <fieldset class="form-group">
    <%= f.label :inscription, t('.the_words') %>
    <%= f.text_area :inscription, {:class => 'form-control', :placeholder => t('.placeholder'), :autofocus => true, :rows => '6'} %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :inscription_is_stub, "We don't have the full, exact wording yet" %>
    <%= f.check_box :inscription_is_stub, {:class => 'form-control'} %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :language_id, "It's written in" %>
    <%= f.collection_select :language_id, @languages, :id, :name, {:class => 'form-control'} %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :inscription_in_english, "If the inscription is not in English, optionally include a translation here" %>
    <%= f.text_area :inscription_in_english, {:class => 'form-control', :rows => '6'} %>
  </fieldset>
<%= f.submit t('buttons.save'), :class => 'btn btn-primary' %>
<% end %>
