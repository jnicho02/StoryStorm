<% content_for(:page_title) {t '.page_title'} %>
<% content_for(:title) {t '.page_heading'} %>

<%= form_for @country, url: countries_path do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: 'form-control-label col-sm-2' %>
      <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :alpha2, class: 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :alpha2, maxlength: 2, class: 'form-control' %>
      <small class="text-muted"><a target="new" href="https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2">ISO 3166</a></small>
    </div>
  </div>
  <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
<% end %>
