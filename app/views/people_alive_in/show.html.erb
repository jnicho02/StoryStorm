<% content_for(:page_title) {t '.page_title', :year => @year.year.to_s } %>
<% content_for(:title) {t '.page_heading', :year => @year.year.to_s } %>
<% content_for(:admin_menu) {navbar_link_to t('buttons.add'), new_person_path} %>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-1">1710</div>
  <div class="col-sm-1">1730</div>
  <div class="col-sm-1">1750</div>
  <div class="col-sm-1">1770</div>
  <div class="col-sm-1">1790</div>
  <div class="col-sm-1">1810</div>
  <div class="col-sm-1">1830</div>
  <div class="col-sm-1">1850</div>
  <div class="col-sm-1">1870</div>
  <div class="col-sm-1">1890</div>
</div>
<div class="row">
  <%= @people.each do |person| %>
    <div class="card vcard" typeof="<%= if (person.person?) then "foaf:Person" else "foaf:Agent" end %> vcard:VCard" about="#person" style="min-height: 5rem; background-color: #999;">
      <div class="col-sm-2">
        <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) %><br/><small><%= person.dates %></small>
      </div>
      <%= datespan(@year.year).html_safe %>
    </div>
  <% end %>
</div>
