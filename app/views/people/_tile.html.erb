<div class="vcard h-card card" typeof="<%= if (person.person?) then "foaf:Person" else "foaf:Agent" end %> vcard:VCard" about="#person" style="width: 20rem;">
  <% if person.main_photo %>
    <%= link_to(thumbnail_img(person), person_path(person), :class => 'card-img-top img-responsive photo') %>
  <% end %>
  <div class="card-block">
    <h4 class="card-title">
      <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) %>
    </h4>
    <p class="card-text">
      <small class="text-muted">
        <%= person.dates %>
      </small>
    </p>
  </div>
</div>