<div class="col-xs-3 vcard well">
  <%= content_tag("div", link_to(thumbnail_img(person), person_path(person))) if person.main_photo %>
  <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) + " " + person.dates %>
</div>