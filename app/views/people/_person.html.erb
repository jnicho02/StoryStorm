<% if controller.controller_name.eql?('people') && controller.action_name.eql?('show')%>
<div class="card vcard col-sm-12 person" typeof="<%= if (person.person?) then "foaf:Person" else "foaf:Agent" end %> vcard:VCard" about="#person">
<% else %>
<div class="card vcard person" typeof="<%= if (person.person?) then "foaf:Person" else "foaf:Agent" end %> vcard:VCard" about="#person" style="width: 20rem;">
<% end %>
  <% if person.main_photo %>
    <%= link_to(thumbnail_img(person), person, :class => 'card-img-top img-responsive') %>
  <% end %>
  <div class="card-block">
    <h4 class="card-title">
      <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) %>
      <small class="card-subtitle text-muted"> <%= person.dates %></small>
    </h4>
    <div class="card-text">
      <small class="text-muted">
        <%= roles_list(person) %>
      </small>
    </div>
  </div>
</div>