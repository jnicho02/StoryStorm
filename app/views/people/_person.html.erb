<div class="card vcard person" typeof="<%= if (person.person?) then "foaf:Person" else "foaf:Agent" end %> vcard:VCard" about="#person" style="min-height: 10rem; background-color: #999;">
  <%= image_tag(person.main_photo.file_url, {:class => 'card-img', :width => '100%'}) if person.main_photo %>
  <div class="card-img-overlay">
    <span class="card-title">
      <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) %><br/>
      <small><%= person.dates %></small>
    </span>
  </div>
</div>
