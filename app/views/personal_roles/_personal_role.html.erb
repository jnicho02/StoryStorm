<% person = personal_role.person %>

<%= stylesheet_link_tag 'people' %>
<div class="card hovercard vcard person" typeof="<%= if (person.person?) then "foaf:Person" else "foaf:Agent" end %> vcard:VCard" about="#person" style="max-width: 10rem;">
  <% if person.main_photo %>
    <div class="card-background">
      <% if person.main_photo.thumbnail_url %>
        <%= image_tag(person.main_photo.thumbnail_url, :class => 'card-bkimg') %>
      <% else %>
        <%= image_tag(person.main_photo.file_url, :class => 'card-bkimg') %>
      <% end %>
    </div>
    <div class="useravatar">
      <%= image_tag(person.main_photo.file_url, :class => 'card-bkimg') %>
    </div>
  <% else %>
    <div class="card-background">
    </div>
  <% end %>
  <div class="card-info">
    <span class="card-title fn">
      <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) %><br/>
      <small><%= person.dates %></small>
    </span>
    <%= personal_role.ordinal.ordinalize  if personal_role.ordinal %>
    <% if personal_role.date_range != "" %>
      <small class="text-muted"><%= personal_role.year_range %></small>
    <% end %>
  </div>
</div>
