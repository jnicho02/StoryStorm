<% content_for(:page_title) {t '.page_title', :language => @language.name } %>
<% content_for(:title) {t '.page_heading', :language => @language.name } %>

<%= form_for @language do |f| %>
  <fieldset class="form-group row">
    <%= f.label :name, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group row">
    <%= f.label :alpha2, :maxlength => 6, :class => 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :alpha2, :class => 'form-control' %>
    </div>
  </fieldset>
  <%= f.submit t('buttons.update'), :class => 'btn btn-primary' %>
<% end %>