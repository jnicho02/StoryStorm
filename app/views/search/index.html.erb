<% content_for(:page_title) {t '.page_title', :phrase => @phrase} %>
<% content_for(:title) {t '.page_heading', :phrase => @phrase} %>

<div class="container">
  <div class="card-columns">
    <%= render @search_results %>
  </div>
</div>

<% if params[:from] && params[:from] == "submission" %>
  <div class="row"><%= t '.not_found' %> <%= link_to t('.add_it'), new_plaque_path(:checked => true) %>.</div>
<% else %>
  <div class="row" id="search_results_footer">
    <h2><%= t '.try_again' %> <%= link_to t('.add_it'), new_plaque_path(:checked => true,  :phrase => @phrase) %></h2>
    <%= render :partial => "search_form", :locals => { :phrase => @phrase } %>
  </div>
<% end %>