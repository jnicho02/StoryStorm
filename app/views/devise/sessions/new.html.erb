<% content_for :page_title, "Login" %>
<% content_for(:title) { 'Login' } %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<fieldset class="form-group row">
		<%= f.label :email, :class => 'form-control-label col-xs-12 col-sm-2' %>
    <div class="col-xs-10 col-sm-5">
			<%= f.text_field :email, :autofocus => true, :class => 'form-control'  %>
		</div>
	</fieldset>
	<fieldset class="form-group row">
		<%= f.label :password, :class => 'form-control-label col-xs-12 col-sm-2' %>
    <div class="col-xs-10 col-sm-5">
			<%= f.password_field :password, :class => 'form-control'  %>
		</div>
	</fieldset>
	<% if devise_mapping.rememberable? -%>
  	<fieldset class="form-group row">
		  <%= f.label :remember_me, :class => 'form-control-label col-sm-2'  %>
      <div class="col-sm-10">
			  <%= f.check_box :remember_me, :class => 'form-control' %>
		  </div>
		 </fieldset>
	<% end -%>
	<%= f.submit "Sign in", :class => "btn btn-primary" %>
	<%= render :partial => "devise/shared/links" %>
<% end %>
