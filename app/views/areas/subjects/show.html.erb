<% content_for(:page_title) {t '.page_title', area: @area.name } %>
<% content_for(:admin_menu) {navbar_link_to t('buttons.add'), new_person_path} %>

<div class="jumbotron">
  <h1>
    <span class="flag-icon flag-icon-<%= @area.country.alpha2 %>"></span>
    <%= link_to(@area.country.name, @area.country) %>
    /
    <%= link_to(@area.name, area_plaques_path(@area)) %>
    <%= t '.page_heading' %>
  </h1>
  <p>
    <%= @area.plaques.connected.count %> out of <%= @area.plaques.count %>
    (<%= ((@area.plaques.connected.count.to_f / @area.plaques.count.to_f) * 100).to_i %>%)
    plaques have been curated
  </p>
  <ul>
    <% @type_counts.each do |t| %>
      <li><%= t[0] %> <%= t[1] %> (<%= ((t[1].to_f/@total) * 100).to_i %>%)</li>
    <% end %>
  </ul>
</div>

<%= will_paginate @plaques if @plaques.respond_to?(:total_pages) %>
