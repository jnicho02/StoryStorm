<% content_for(:page_title) {t '.page_title', country: @country.name} %>
<% content_for(:title) { t '.page_heading_html', country: link_to(@country.name , country_path(@country)) } %>

<%= form_for(@area, url: country_areas_path(@country.alpha2)) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :slug, class: 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :slug, class: 'form-control' %>
      <small class="text-muted"><%= t 'must_be_underscored' %></small>
    </div>
  </div>
  <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
<% end %>
