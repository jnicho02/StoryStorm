<% content_for(:page_title) {t '.page_title_unphotographed', :area => @area.name + ", " + @area.country.name } %>
<% content_for(:title) { render @area } %>
<% content_for(:admin_menu) {navbar_link_to t('buttons.edit'), edit_area_path(@area), {:class => :edit, :title => t('buttons.edit')}} %>

<div class="container">
  <p>This area is centred on the geographical point <%= @area.longitude %>, <%= @area.latitude %></p>
  <p>There are <%= @area.plaques_count %> plaques in this area.</p>
</div>

<div class="panel clearfix">
  <p class="alternate_formats"><%= t 'data_about_thing_as' %> .json and .geojson</p>
</div>